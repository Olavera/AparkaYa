            android:gravity="center_horizontal"/>

        <EditText
            android:id="@+id/EditText01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:ems="10" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <TextView
